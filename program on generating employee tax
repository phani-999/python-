empo=int(input("enter the employee number:"))
empname=input("enter the employee name:")
empdesig=input("enter the employee desgination:")
basicsalary=int(input("enter the basic salary:"))
da=int(input("enter the daily allowance:"))
ta=int(input("enter the travelling allowance:"))
hra=int(input("enter the house rental allowance:"))
netsalary=basicsalary+da+ta+hra
if netsalary>100000:
    tax=netsalary*10/100
    print(tax)
elif netsalary>50000:
    tax=netsalary*7/100
    print(tax)
elif netsalary>40000:
    tax=netsalary*4/100
    print(tax)
elif netsalary>20000:
    tax=netsalary*2/100
    print(tax)
else:
    print("no tax")
    
