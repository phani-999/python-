a=int(input("enter the number:"))
b=int(input("enter the number:"))
c=int(input("enter the number:"))
d=int(input("enter the number:"))
if a>b:
    if a>c:
        if a>d:
            print("a is big")
if b>a:
    if b>c:
        if b>d:
            print("b is big")
if c>a:
    if c>b:
        if c>d:
            print("c is big")
else:
    print("d is big")


